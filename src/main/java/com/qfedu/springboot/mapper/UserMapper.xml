<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.springboot.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.qfedu.springboot.entity.User">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="CHAR"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="userface" column="userface" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="enabled" column="enabled" jdbcType="TINYINT"/>
        <association property="role" javaType="com.qfedu.springboot.entity.Role">
            <result property="rid" column="rid"></result>
            <result property="nameZh" column="nameZh"></result>
            <result property="enabled" column="enabled"></result>
        </association>
    </resultMap>
    <insert id="addUser">
        insert into user (name,phone,rid,telephone,address,username,password,userface,remark,enabled)
        values (#{name},#{phone},#{rid},#{telephone},#{address},#{username},concat("{noop}",#{password}),#{userface},#{remark},#{enabled});
    </insert>
    <update id="updateUser">
        update user
        <set>
            <if test="name!=null and name!=''">
                name=#{name},
            </if>
            <if test="phone!=null and phone!=''">
                phone=#{phone},
            </if>
            <if test="rid!=null and rid!=''">
                rid=#{rid},
            </if>
            <if test="telephone!=null and telephone!=''">
                telephone=#{telephone},
            </if>
            <if test="address!=null and address!=''">
                address=#{address},
            </if>
            <if test="username!=null and username!=''">
                username=#{username},
            </if>
            <if test="password!=null and password!=''">
                password=concat("{noop}",#{password}),
            </if>
            <if test="userface!=null and userface!=''">
                userface=#{userface},
            </if>
            <if test="remark!=null and remark!=''">
                remark=#{remark},
            </if>
        </set>
        where id=#{id};
    </update>
    <update id="deBlockedUser">
        update user set enabled=true where id=#{id}
    </update>
    <select id="loadUserByUsername"
            resultType="com.qfedu.springboot.entity.User">
        select *
        from user
        where username = #{username};
    </select>
    <select id="getTotal" resultType="java.lang.Integer">
        select count(*)
        from user where id is not null
        <if test="name!=null and name!=''">
            and name like concat("%",#{name},"%");
        </if>
    </select>
    <select id="getUserByPage" resultMap="BaseResultMap">
        select u.*, r.*
        from user u, role r where u.rid = r.rid
        <if test="name!=null and name!=''">
            and u.name like concat("%",#{name},"%")
        </if>
        limit #{offset},#{size};
    </select>
    <select id="getUserById" resultMap="BaseResultMap">
        select u.*, r.*
        from user u, role r
        where u.id = #{id} and u.rid = r.rid
    </select>
    <select id="getUserByUserName" resultMap="BaseResultMap">
        select *
        from user
        where username = #{username};
    </select>
    <delete id="deleteUserById">
        update user
        set enabled=false
        where id=#{id};
    </delete>
</mapper>